

select  b.name as 'Department',
        a.name as 'Employee',
        Salary
from
        Employee a
join
        Department b
on      a.DepartmentId = b.Id
where
    (a.DepartmentId , Salary) IN
    (   select
                DepartmentId, 
                max(Salary)
        from Employee
        group by DepartmentId
    )
